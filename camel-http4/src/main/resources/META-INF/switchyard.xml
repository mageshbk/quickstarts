    <sca:composite name="camel-http4"
    targetNamespace="urn:switchyard-quickstart:camel-http4:1.0">
        <sca:service name="QuoteService" promote="QuoteService/QuoteService">
            <http:binding.http>
                <operationSelector operationName="getPrice"/>
                <http:contextPath>camel-http4/quote</http:contextPath>
            </http:binding.http>
        </sca:service>
        <sca:service name="SymbolService" promote="SymbolService/SymbolService">
            <http:binding.http>
                <operationSelector operationName="getSymbol"/>
                <http:contextPath>camel-http4/symbol</http:contextPath>
            </http:binding.http>
        </sca:service>
        <sca:reference multiplicity="1..1" name="Symbol" promote="QuoteService/Symbol">
            <http4:binding.http4>
                <http4:resourceUri>camel-http4/symbol</http4:resourceUri>
                <http4:host>localhost</http4:host>
                <http4:port>${httpPort}</http4:port>
                <http4:connectionTimeToLive>5</http4:connectionTimeToLive>
            </http4:binding.http4>
        </sca:reference>
        <sca:component name="SymbolService">
            <bean:implementation.bean class="org.switchyard.quickstarts.http.binding.SymbolServiceImpl"/>
            <sca:service name="SymbolService">
                <sca:interface.java interface="org.switchyard.quickstarts.http.binding.SymbolService"/>
            </sca:service>
        </sca:component>
        <sca:component name="QuoteService">
            <bean:implementation.bean class="org.switchyard.quickstarts.http.binding.QuoteServiceImpl"/>
            <sca:service name="QuoteService">
                <sca:interface.java interface="org.switchyard.quickstarts.http.binding.QuoteService"/>
            </sca:service>
            <sca:reference name="Symbol">
                <sca:interface.java interface="org.switchyard.quickstarts.http.binding.SymbolService"/>
            </sca:reference>
        </sca:component>
    </sca:composite>
    <domain>
        <properties>
            <property name="httpPort" value="${org.switchyard.component.http.standalone.port:8080}"/>
            <!-- Uncomment this section to trace message exchange activity
            -->
            <property name="org.switchyard.handlers.messageTrace.enabled" value="true"/>
        </properties>
    </domain>
</switchyard>
